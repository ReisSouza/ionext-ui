{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false
    },
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "storybook": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "tsc": {
      "dependsOn": ["build"]
    },
    "update-dependencies": {
      "cache": false
    }
  }
}
